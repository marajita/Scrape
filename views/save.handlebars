<div class="container">
    <ul id="article-list" class="list-group">
        {{#each articles}}
        <li data-id="{{this.id}}" class="list-group-item">
            <a href="{{this.link}}">{{this.title}}</a>
            <p>{{this.description}}</p>
            <p>{{this.datePublished}}</p>
            <button data-id="{{this.id}}" class="btn btn-danger float-right delete-article">Delete From
                Saved</button>
            <button data-id="{{this.id}}" type="button" class="btn btn-primary float-right article-notes"
                data-target="#myModal">Article Notes</button>

        </li>
        {{/each}}
    </ul>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title float-left">Notes for Article</h4>
                    <h4 id="article-id"></h4>
                </div>
                <div class="modal-body">
                    <div>
                        <ul id="note-list" class="list-group">

                        </ul>
                    </div>
                    <div>
                        <textarea cols="50" rows="5" id='bodyinput' name='body'></textarea> </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default save-note">Save Note</button>
                </div>
            </div>

        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>